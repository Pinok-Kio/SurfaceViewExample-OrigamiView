<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.serega.origamicontrol.origamicontrol.view.OrigamiView
	    xmlns:origami="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	    android:id="@+id/origami_view"
	    origami:origamiCenterMargin="50dp"
	    origami:origamiBackgroundColor="#ff1c2d41"
	    origami:origamiIndicatorColor="#ff5e5e5e"
	    origami:origamiCurrentIndicatorColor="@android:color/holo_red_dark"
	    origami:origamiDrawGradientShadow="true"/>

</RelativeLayout>
